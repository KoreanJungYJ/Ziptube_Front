{
    "content_security_policy" : "script-src 'self' https://unpkg.com/axios/dist/axios.min.js; object-src 'self'",
    "manifest_version" : 2,
    
    "name" : "Ziptube",
    "version" : "1.0",
    "description" : "Youtube Files Downloader Program",
    "browser_action" : {
        "default_icon" : "./designs/RESOURCE/logo.png",
        "default_popup" : "ziptube.html",
        "default_title" : "Ziptube"
    },
    
    // "background" : {
    //     "scripts" : ["background.js"],
    //     "persistent" : false
    // },

    "permissions" : [
        "activeTab",
        "https://www.youtube.com/*",
        "tabs",
        "storage"
    ]
}